{
  "name": "koa-helmet",
  "author": "Matt Venables <mattvenables@gmail.com>",
  "description": "Security header middleware collection for koa",
  "license": "MIT",
  "version": "3.1.0",
  "main": "lib/koa-helmet.js",
  "scripts": {
    "test": "./node_modules/.bin/standard && NODE_ENV=test ./node_modules/.bin/nyc --reporter=lcov --reporter=text ./node_modules/.bin/mocha 'test/**/*.spec.js'",
    "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls"
  },
  "keywords": [
    "security",
    "headers",
    "koa",
    "x-frame-options",
    "csp",
    "hsts"
  ],
  "repository": {
    "url": "git://github.com/venables/koa-helmet.git"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "dependencies": {
    "helmet": "^3.0.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.16",
    "koa": "next",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "standard": "^9.0.0",
    "supertest": "^2.0.1"
  }
}
